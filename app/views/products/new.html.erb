<h1>New product</h1>

<%= form_for(@product) do |product| %>
  <div class="field">
    <%= product.label :name %>
    <%= product.text_field :name %>
  </div>

  <div class="field">
    <%= product.label :reference %>
    <%= product.text_field :reference %>
  </div>

  <div class="field">
    <% product.label :price %>
    <% product.number_field :price %>
  </div>

  <div class="field">
    <%= product.label :quantity %>
    <%= product.number_field :quantity %>
  </div>

  <div class="field">
    <%= product.label :brand %>
    <%= product.text_field :brand %>
  </div>

  <div class="field">
    <%= product.label :description %>
    <%= product.text_area :description %>
  </div>

  <div class="actions">
    <%= product.submit %>
  </div>
<% end %>
